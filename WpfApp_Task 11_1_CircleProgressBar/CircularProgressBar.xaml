<UserControl x:Class="WpfApp_Task_11_1_CircleProgressBar.CircularProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp_Task_11_1_CircleProgressBar"
             mc:Ignorable="d"
d:DesignHeight="100" d:DesignWidth="100">

    <Viewbox>
        <Grid Width="100" Height="100">
            <!-- Фон круга -->
            <Ellipse Stroke="LightGray" StrokeThickness="5" Fill="Transparent"/>

            <!-- Прогресс -->
            <Path Stroke="Blue" StrokeThickness="5" StrokeStartLineCap="Round" StrokeEndLineCap="Round"
                  RenderTransformOrigin="0.5,0.5">
                <Path.Data>
                    <PathGeometry>
                        <PathFigure StartPoint="50,95">
                            <ArcSegment Point="{Binding ArcEndPoint, RelativeSource={RelativeSource AncestorType=local:CircularProgressBar}}"
                                        Size="45,45" 
                                        SweepDirection="Clockwise"
                                        IsLargeArc="{Binding IsLargeArc, RelativeSource={RelativeSource AncestorType=local:CircularProgressBar}}"/>
                        </PathFigure>
                    </PathGeometry>
                </Path.Data>
                <Path.RenderTransform>
                    <RotateTransform Angle="{Binding ProgressAngle, RelativeSource={RelativeSource AncestorType=local:CircularProgressBar}}"/>
                </Path.RenderTransform>
            </Path>

            <!-- Текст с процентом -->
            <TextBlock Text="{Binding PercentageText, RelativeSource={RelativeSource AncestorType=local:CircularProgressBar}}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontWeight="Bold"/>
        </Grid>
    </Viewbox>
</UserControl>