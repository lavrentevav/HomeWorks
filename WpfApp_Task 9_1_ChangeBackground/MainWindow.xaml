<Window x:Class="WpfApp_Task_9_1_ChangeBackground.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_Task_9_1_ChangeBackground"
        mc:Ignorable="d"
        Title="Цвет фона" Height="400" Width="600">
    <Window.CommandBindings>
        <CommandBinding Command="local:CustomCommands.ChangeColor" 
                        Executed="ChangeColorExecuted"/>
        <CommandBinding Command="ApplicationCommands.Undo" 
                        Executed="UndoExecuted"
                        CanExecute="UndoCanExecute"/>
    </Window.CommandBindings>

    <DockPanel x:Name="MainDock" Background="White">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Действия">
                <MenuItem Header="Изменить цвет" 
                          Command="local:CustomCommands.ChangeColor"/>
                <MenuItem Header="Отменить" 
                          Command="ApplicationCommands.Undo"/>
            </MenuItem>
        </Menu>

        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Button Content="Изменить цвет" 
                    Command="local:CustomCommands.ChangeColor" 
                    Margin="15" Padding="10,5"/>
            <Button Content="Отменить" 
                    Command="ApplicationCommands.Undo" 
                    Margin="15" Padding="10,5"/>
        </StackPanel>
    </DockPanel>
</Window>