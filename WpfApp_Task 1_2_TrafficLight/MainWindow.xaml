<Window x:Class="WpfApp_Task_1_2_TrafficLight.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_Task_1_2_TrafficLight"
        mc:Ignorable="d"
        Title="Светофор" Height="500" Width="200">

    <Grid>
        <!-- Красный свет -->
        <Ellipse x:Name="redLight" 
                 Width="100" 
                 Height="100" 
                 Fill="Gray"
                 Margin="50,30,50,354"/>

        <!-- Желтый свет -->
        <Ellipse x:Name="yellowLight" 
                 Width="100" 
                 Height="100" 
                 Fill="Gray"
                 Margin="50,150,50,225"/>

        <!-- Зелёный свет -->
        <Ellipse x:Name="greenLight" 
                 Width="100" 
                 Height="100" 
                 Fill="Green"
                 Margin="50,280,50,104"/>

        <!-- Кнопка переключения -->
        <Button x:Name="nextButton" 
                Content="Next" 
                Width="100" 
                Height="40"
                Click="NextButton_Click" Margin="50,380,50,13"/>
    </Grid>
</Window>
