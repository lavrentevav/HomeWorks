<Window x:Class="WpfApp_Task_1_3_RunawayButton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_Task_1_3_RunawayButton"
        mc:Ignorable="d"
        Title="Убегающая кнопка" Height="400" Width="600">

    <Grid x:Name="MainGrid">
        <Button x:Name="runawayButton" 
                Content="Поймай меня!" 
                Width="120" 
                Height="40"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                MouseEnter="RunawayButton_MouseEnter"/>
    </Grid>
</Window>
